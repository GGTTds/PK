        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PK_KONTR"
        mc:Ignorable="d"
           Title="Меню" Height="265.545" Width="255.727" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="logo-kontur-big.jpg" Background="White">
    <Grid Margin="0,0,-6,-2">
        <Button Click="CreaOtch_Click" Name="CreaOtch" Content=" Создать отчет" Margin="43,36,0,0" Height="30" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="#FF1A48A8" HorizontalAlignment="Left" Width="157"/>
