        <Label x:Name="fr" Content="Не выбран" HorizontalAlignment="Left" Margin="127,203,0,0" VerticalAlignment="Top" Width="75" Foreground="Red"/>
        <Image Height="29" Margin="75,7,0,0" VerticalAlignment="Top" Source="logo-kontur-big.jpg" HorizontalAlignment="Left" Width="95"/>
        <Button Click="Add_Copy_Click" x:Name="Add_Copy" Content=" Выбрать файл (журнал)" Width="157" Margin="43,171,0,0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="#FF0D46BB"/>

    </Grid>
</Window>
