        <Button Click="Add_Click" x:Name="Add" Content=" Выбрать файл (отчет)" Width="157" Margin="43,127,0,0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="#FF0D46BB"/>
